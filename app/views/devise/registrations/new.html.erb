<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


<div class="page-header">
  <h1>New User Registration</h1>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" , :class => "form-control", :placeholder => "8 characters minimum" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :university %>
      <%= f.text_field :university, autofocus: true, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :introduction %>
      <%= f.text_field :introduction, autofocus: true, :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label :profile_pic %>
      <%= f.text_field :profile_pic, autofocus: true, :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
