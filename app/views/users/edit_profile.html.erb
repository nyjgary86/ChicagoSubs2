<% if current_user.errors.any? %>
  <% current_user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Profile</h1>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
  <form action="/users/update_profile" class="form-horizontal">

    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">
        Email
      </label>
      <div class="col-sm-10">
        <input type="email" name="email" class="form-control" readonly value="<%= current_user.email %>">
      </div>
    </div>

    <div class="form-group">
      <label for="first_name" class="col-sm-2 control-label">
        First Name
      </label>
      <div class="col-sm-10">
        <input type="text" name="first_name" class="form-control" value="<%= current_user.first_name %>">
      </div>
    </div>

    <div class="form-group">
      <label for="last_name" class="col-sm-2 control-label">
        Last Name
      </label>
      <div class="col-sm-10">
        <input type="text" name="last_name" class="form-control" value="<%= current_user.last_name %>">
      </div>
    </div>

<!--     <div class="form-group">
      <label for="university_id" class="col-sm-2 control-label">
        University
      </label>
      <div class="col-sm-10">
        <%=select_tag("university_id", options_from_collection_for_select(University.all, "id", "name")) %>
      </div>
    </div> -->

    <div class="form-group">
      <label for="university_id" class="col-sm-2 control-label">
        University
      </label>
      <div class="col-sm-10">
        <%= select_tag(:university_id, options_from_collection_for_select(University.all, "id", "name"), :class => "form-control" ) %>
      </div>
    </div>

      <div class="form-group">
        <label for="introduction" class="col-sm-2 control-label">
          Introduction
        </label>
        <div class="col-sm-10">
          <textarea id="introduction" name="introduction" placeholder="Introduction" class="form-control" rows="5"><%= current_user.introduction %></textarea>
        </div>
      </div>

    <div class="form-group">
      <label for="profile_pic" class="col-sm-2 control-label">
        Profile Picture
      </label>
      <div class="col-sm-10">
        <input type="text" name="profile_pic" class="form-control" value="<%= current_user.profile_pic %>">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Update Profile" class="btn btn-primary">
      </div>
    </div>
  </form>
  </div>
</div>
